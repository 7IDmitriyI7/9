using System;

namespace _9._3
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите день года");
            int a = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Введите день недели, с которого начинается год 1-7");
            int n = Convert.ToInt32(Console.ReadLine());
            if (n > 0 && n <= 7)
            {
                int k=0;

                if (a > 0 && a <= 365)
                {

                         k = a % 7;
                        if (k == 0)
                        {
                            k = 7;
                        }
                        k = k + n-1;
                        if (k > 7)
                        {
                            k = k - 7;
                        }
                        
                    Console.WriteLine("Номер дня недели равен " + k);
                }
                else
                {
                    Console.WriteLine("Ошибка");
                }

            }
            else
            {
                Console.WriteLine("Ошибка");
            }
        }
    }
}
